<div class="jumbotron">``
  <h1>Word Definer</h1>
</div>

<form action="definitions/:id" method="post">
  <div class="form-group">
    <h2>Input word</h2>
    <label for="word">Word</label>
    <input name="word" id="word" class="form-control" type="text" placeholder="Enter word">
    <br>
    <button type="add" class="btn btn-primary">Add</button>
    <button class="btn btn-primary" id="clear" formaction='/clear'>Clear</button>
  </div>

  <div id="output">
    <h2>Words:</h2><br>

     <% @list.each do |x| %>
       <h4><a href='/definitions/<%= x.id() %>'><%= x.word %></a></h4>
     <% end %>

  </div>
</form>

<div class="jumbotron">``
  <h1>Word Definer</h1>
</div>

<form action="/" method="post">
  <div class="form-group">
    <h2>Input word</h2>
    <input name="word" class="form-control" type="text" placeholder= "Enter word"><br>
    <button type="add_word" class="btn btn-primary">Add word</button>
    <button class="btn btn-primary" id="clear" formaction='/clear'>Clear</button>
  </div>
  <div id="output">
    <h2>Words:</h2><br>

     <% @word_list.each do |x| %>
       <h4><a href="/word_input/<%= x.term %>"><%= x.term %></a></h4>
       <% end %>

  </div>
</form>
